    <label for="sito">Sito Immersione</label>
    <input type="text" class="form-control" name="sito">
  </div>
  <div class="form-group col-md-6">
    <label for="luogo" class="form-label">Luogo</label>
    <input type="text" class="form-control" name="luogo">
  </div>
  <div class="form-group col-md-6">
    <label for="diving" class="form-label">Diving</label>
